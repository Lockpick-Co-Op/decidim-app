<% if I18n.exists?("decidim.omniauth.france_connect.external.link") %>
  <li class="small">
    <%= link_to t("link", scope: "decidim.omniauth.france_connect.external"), target: "_blank" do %>
      <%= t("text", scope: "decidim.omniauth.france_connect.external") %>
    <% end %>
  </li>
<% end %>
<li><%= link_to t(".profile"), decidim.account_path %></li>
<% if current_user.email.present? %>
  <% if current_user.nickname.present? && !current_user.managed? %>
    <li><%= link_to t(".public_profile"), decidim.profile_path(current_user.nickname) %></li>
  <% end %>
<% end %>
<% if allowed_to? :read, :admin_dashboard %>
  <li><%= link_to t(".admin_dashboard"), decidim_admin.root_path %></li>
<% end %>
<li><%= link_to t(".sign_out"), decidim.destroy_user_session_path, method: :delete, class: "sign-out-link" %></li>
